<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/f_20sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/f_20sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/f_16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_48dp</item>
    </style>

    <style name="ButtonStyle.Ok">
        <item name="android:background">@drawable/btn_ok_selector</item>
        <item name="android:textColor">@color/text_white_selector</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/f_16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/f_18sp</item>
    </style>

    <style name="TextViewStyle.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/f_14sp</item>
    </style>

    <style name="TextViewStyle.Micro">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/f_12sp</item>
    </style>

    <style name="textSideMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/f_16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_menu</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="textSubMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/_16dp</item>
        <item name="android:paddingRight">@dimen/_16dp</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:textColor">@color/text_white_selector</item>
        <item name="android:textSize">@dimen/f_14sp</item>
    </style>

    <style name="line_divider_horizontal_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height_005</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="line_horizontal_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height_005</item>
        <item name="android:background">@color/line_light</item>
    </style>
</resources>
